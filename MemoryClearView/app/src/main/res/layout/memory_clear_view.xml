<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/ll_Root_Bg"
              android:background="@color/litter_gray"
              android:orientation="vertical"
              android:layout_height="50dp">
    <Space
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:id="@+id/img_time0"
            android:src="@drawable/clock_num_1"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/img_time1"
            android:src="@drawable/clock_num_1"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="15dp"
            android:id="@+id/img_time_colon"
            android:src="@drawable/clock_slantline"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/img_time2"
            android:src="@drawable/clock_num_2"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/img_time3"
            android:src="@drawable/clock_num_2"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/img_slantline"
                android:layout_centerInParent="true"
                android:src="@drawable/clock_num_colon"
                android:layout_height="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/text_week"
                    android:textSize="14sp"
                    android:text="Wed"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/text_date"
                    android:text="12 NOV 2015"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"/>
</LinearLayout>
